# ============================================
# Database Configuration
# ============================================
# Copy this file to .env and update with your actual values
# Command: cp env.template .env  (Linux/Mac) or copy env.template .env  (Windows)

# NOTE: This application now uses Firestore (Firebase) as the primary database
# MySQL/SQLite configuration is no longer needed

# ============================================
# JWT Settings
# ============================================
SECRET_KEY=your-secret-key-change-in-production-please-use-a-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Server Settings
# ============================================
HOST=0.0.0.0
PORT=8000
DEBUG=True

# ============================================
# CORS Settings
# ============================================
ALLOWED_ORIGINS=*

# ============================================
# AI/ML Settings
# ============================================
MODEL_PATH=./models
VOICE_MODEL_PATH=./models/voice_analysis
TYPING_MODEL_PATH=./models/typing_analysis
DEPRESSION_MODEL_PATH=./models/depression_detection

# ============================================
# Firebase Settings (REQUIRED)
# ============================================
# Path to Firebase service account JSON file
# Download from: Firebase Console → Project Settings → Service Accounts
# Save as: backend/firebase-credentials.json
FIREBASE_CREDENTIALS=./firebase-credentials.json

# ============================================
# Google APIs (Optional)
# ============================================
GOOGLE_SPEECH_API_KEY=
GOOGLE_MAPS_API_KEY=

# ============================================
# Rasa Chatbot (Optional)
# ============================================
RASA_SERVER_URL=http://localhost:5005

# ============================================
# File Upload Settings
# ============================================
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads


GEMINI_API_KEY=
